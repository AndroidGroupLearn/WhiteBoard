<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.epiklp.whiteboard.activity.ConnectionTestActivity">

    <ToggleButton
        android:id="@+id/discoveryToggleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="ToggleButton"
        android:textOff="Discovery"
        android:textOn="Discovery"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/msg_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_et"
        app:layout_constraintVertical_bias="0.0" />

    <ToggleButton
        android:id="@+id/advertisingToggleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ToggleButton"
        android:textOff="Sharing"
        android:textOn="Sharing"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/msg_tv"
        app:layout_constraintTop_toBottomOf="@+id/message_et"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="148dp" />

    <EditText
        android:id="@+id/message_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/send_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:onClick="sendTestMessage"
        android:text="@string/send"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/msg_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_et" />

    <TextView
        android:id="@+id/msg_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/send_btn" />


</android.support.constraint.ConstraintLayout>
